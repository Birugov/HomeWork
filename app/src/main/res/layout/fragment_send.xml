<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_leave_wishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Оставьте пожелания павшему воину"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <EditText
        android:id="@+id/et_wishes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Пожелания"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="@+id/tv_leave_wishes"
        app:layout_constraintTop_toBottomOf="@+id/tv_leave_wishes" />

    <EditText
        android:id="@+id/et_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="От кого"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_wishes"
        app:layout_constraintStart_toStartOf="@+id/et_wishes"
        app:layout_constraintTop_toBottomOf="@+id/et_wishes" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_author" />

</androidx.constraintlayout.widget.ConstraintLayout>